---
import type { LogoProps } from "../types";
type Props = LogoProps;

const { name } = Astro.props;
---

<div class="flex flex-col items-center justify-center space-y-4 animate-fade-in">
  <div class="w-32 h-32 bg-white rounded-full overflow-hidden shadow-lg">
    <img src="/foto-perfil.jpg" alt="website logo" class="w-full h-full object-cover" loading="lazy" decoding="async" />
  </div>
  <h2 class="text-2xl font-bold text-white animate-slide-up">{name}</h2>
</div>

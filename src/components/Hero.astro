---
import type { HeroProps } from "../types";

interface Props extends HeroProps {}

const { name, specialty, summary } = Astro.props;
---

<section class="min-h-[85vh] flex flex-col justify-start pt-32 relative">
  <div class="animate-slide-in-left" style="animation-delay: 0.2s">
    <h1 class="text-5xl md:text-7xl font-bold text-white mb-4 relative">
      {name}
      <span
        class="absolute -top-4 -right-4 w-8 h-8 bg-primary rounded-full animate-pulse-glow"
      ></span>
    </h1>
    <h2 class="text-3xl md:text-4xl font-bold text-primary mb-8 group">
      <span
        class="inline-block animate-[flip_1s_ease-in-out] hover:animate-[flip_1s_ease-in-out]"
        >{specialty}</span
      >
    </h2>
  </div>

  <div class="max-w-2xl animate-slide-in-right" style="animation-delay: 0.4s">
    <p class="text-neutral text-lg mb-8">{summary}</p>
    <div class="flex justify-center mt-20">
      <div class="relative w-64 h-10">
        <div
          class="absolute inset-0 bg-gradient-to-r from-primary to-secondary rounded-full blur-lg opacity-60 animate-gradient-move"
        >
        </div>
        <div class="absolute inset-0 flex items-center justify-center">
          <span
            class="text-white font-semibold tracking-wide drop-shadow-lg animate-text-glow"
            >Este es mi Portfolio</span
          >
        </div>
      </div>
    </div>
    <style>
      @keyframes gradientMove {
        0% {
          background-position: 0% 50%;
        }
        100% {
          background-position: 100% 50%;
        }
      }
      .animate-gradient-move {
        background-size: 200% 200%;
        animation: gradientMove 3s linear infinite alternate;
      }
      @keyframes textGlow {
        0%,
        100% {
          text-shadow:
            0 0 8px #fff,
            0 0 16px var(--tw-gradient-from),
            0 0 32px var(--tw-gradient-to);
        }
        50% {
          text-shadow:
            0 0 16px #fff,
            0 0 32px var(--tw-gradient-from),
            0 0 64px var(--tw-gradient-to);
        }
      }
      .animate-text-glow {
        animation: textGlow 2.5s ease-in-out infinite;
      }
    </style>
  </div>

  <div
    class="absolute top-20 right-20 w-32 h-32 bg-primary/20 rounded-full filter blur-3xl animate-pulse-glow"
  >
  </div>
</section>

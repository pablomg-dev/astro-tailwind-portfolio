---
import type { ProjectProps } from "../types";
import Section from "./Section.astro";
import { Image } from "astro:assets";

interface Props {
  projects: ProjectProps[];
}

const { projects } = Astro.props;
---

<Section text="Proyectos" href="projects">
  {
    projects.map((project) => (
      <div 
        class={`w-full min-h-96 relative z-[1] bg-[#1c232d]/85 bg-difu before:content-[''] before:rounded-2xl before:absolute before:z-[-1] before:opacity-[5%] before:inset-0 before:bg-[url(/raja.png)] before:bg-repeat before:bg-[length:128px] rounded-2xl flex flex-col sm:grid sm:grid-cols-2 mb-10 opacity-0 transition-all duration-700 translate-y-16`}
        data-scroll-animation
      >
        <div class="p-6 py-12">
          <h3 class="text-3xl font-medium font-serif mb-5 text-primary animate-float">
            {project.name}
          </h3>
          <p class="text-neutral text-base">{project.summary}</p>
          <div class="pt-10 flex gap-5">
            {project.link && (
              <a
                href={project.link}
                target="_blank"
                class="bg-primary text-white px-4 py-2 rounded-lg hover:bg-primary/80 animate-pulse-glow"
              >
                Ir a Sitio
              </a>
            )}
            {project.code && (
              <a
                href={project.code}
                target="_blank"
                class="bg-white text-black px-4 py-2 rounded-lg hover:bg-white/80 animate-pulse-glow"
              >
                Ver CÃ³digo
              </a>
            )}
          </div>
        </div>
        <div class="flex items-end group">
          <Image
            class="w-full h-[85%] object-cover object-left-top md:rounded-ss-xl transition-transform duration-300 group-hover:scale-105"
            src={project.image}
            alt={project.name}
            width="560"
            height="368"
          />
        </div>
      </div>
    ))
  }
</Section>


